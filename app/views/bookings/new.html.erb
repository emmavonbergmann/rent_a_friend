<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>
<div class=container-new-friend>
  <div class="new-friend bg-white rounded p-3 shadow" style="width: 600px">

    <h1>Book me as a <strong>friend</strong> :</h1>
    <%= simple_form_for [@friend, @booking] do |f| %>
      <%= f.input :occurs_on %>
      <%= f.submit "Submit", class: "btn btn-success" %>

    <% end %>
  </div>
  <div class="back to home page">
      <%= link_to 'Cancel', friend_path(@friend) %>
    </div>
</div>
