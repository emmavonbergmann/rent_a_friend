<div class=container-new-friend>
  <div class="new-friend bg-white rounded p-3 shadow" style="width: 600px">

    <h1>Become a <strong>friend</strong> :</h1>
    <%= simple_form_for(@friend) do |f| %>
      <%= f.input :about_me %>
      <%= f.input :hobbies %>
      <%= f.input :price %>
      <%= f.input :zodiac_sign %>
      <%= f.input :availability %>
      <%= f.input :pronouns %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit", class: "btn btn-success" %>

    <% end %>
  </div>
  <div class="back to home page">
      <%= link_to 'Cancel -> Back to home page', friends_path(@friend) %>
    </div>
</div>
