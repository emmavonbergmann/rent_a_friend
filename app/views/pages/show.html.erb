<div class="profile-container">
  <div>
    <% if @user.photo.key %>
      <div class="friend-image" style="background-image: url('<%= cl_image_path @user.photo.key, backgroundsize: :cover, crop: :fill %>')" >
    <% else %>
      <div class="friend-image" style="background-image: url('https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8cGVyc29ufGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60')" >
    <% end %>
      <h1><%=  @user.first_name %> <%= @user.last_name %></h1>
      <%= link_to link_to 'Sign up to become a friend', new_friend_path(@friend), class:"btn btn-secondary"%>
  </div>

  <div class="profile-info">

    <div class="profile-details">
      <div class="Email">
        <h5>My Email:</h5>
        <p><%= @user.email %></p>
      </div>

      <div class="Address">
        <h5>My Address:</h5>
        <p><%= @user.address %></p>
      </div>

      <div class="Age">
        <h5>My Age:</h5>
        <p><%= @user.age %></p>
      </div>

      <div class="Birth-date">
        <h5>My Birthdate:</h5>
        <p><%= @user.birth_date %></p>
      </div>

      <div class="Gender">
        <h5>My Gender:</h5>
        <p><%= @user.gender %></p>
      </div>
    </div>

    <div class="My-Bookings">
      <h4>My Bookings:</h4>
      <div class="Bookings">
        <% @bookings.each do |booking|%>
          <%= booking.friend.user.first_name %> - <%= booking.occurs_on %>
          <div>
          <%= link_to "Delete", booking_path(booking), class:"btn btn-secondary btn-sm", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
          </div>
          <% end %>
      </div>
    </div>

  </div>
</div>
